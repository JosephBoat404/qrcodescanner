{
  "manifest_version": 3,
  "name": "QR Code Scanner",
  "version": "1.0",
  "description": "Scan QR codes directly from web pages",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "tabs",
    "tabCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jsQR.js", "content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["jsQR.js", "*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}